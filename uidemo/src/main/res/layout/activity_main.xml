<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_code1_bezier"
                style="@style/text_button"
                android:text="1、贝塞尔曲线" />

            <TextView
                android:id="@+id/tv_code2_pathmeasure"
                style="@style/text_button"
                android:text="2、PathMeasure" />

            <TextView
                android:id="@+id/tv_code3_anim"
                style="@style/text_button"
                android:text="3、属性动画" />

            <TextView
                android:id="@+id/tv_code4_xfermode"
                style="@style/text_button"
                android:text="4、Xfermode" />

            <TextView
                android:id="@+id/tv_code5_scroller_velocityTracker"
                style="@style/text_button"
                android:text="5、Scroller 和 VelocityTracker" />

            <TextView
                android:id="@+id/tv_code6_draw_flow"
                style="@style/text_button"
                android:text="6、绘制流程" />

            <TextView
                android:id="@+id/tv_code7_svg"
                style="@style/text_button"
                android:text="7、svg 使用" />

            <TextView
                android:id="@+id/tv_code8_canvas_clip"
                style="@style/text_button"
                android:text="8-1、canvas的裁剪师" />

            <TextView
                android:id="@+id/tv_code8_canvas_draw"
                style="@style/text_button"
                android:text="8-2、canvas的绘图师" />

            <TextView
                android:id="@+id/tv_code8_canvas_text"
                style="@style/text_button"
                android:text="8-3、canvas的书法家" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
